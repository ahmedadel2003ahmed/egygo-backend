                {
                  "key": "maxPrice",
                  "value": "150",
                  "description": "Maximum price per hour",
                  "disabled": true
                },
                {
                  "key": "near",
                  "value": "29.9792,31.1342",
                  "description": "lat,lng for proximity search",
                  "disabled": true
                },
                {
                  "key": "radius",
                  "value": "10000",
